extends layout

block append assets

block content

  form(action="/registrated" method="post")
    h1 Registration please

    .form-group
      label(for="name") Name
      input.form-control( id="displayName" name="displayName" placeholder="       " required autofocus)
    .form-group
      label(for="email") Email
      input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)

    button.btn.btn-lg.btn-primary.btn-block(type="submit") Registration